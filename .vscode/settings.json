
{
  // Treat Hugo layout JSON templates as HTML (Go template) instead of JSON
  "files.associations": {
    "*.json.json": "html",
    "**/layouts/**/*.json": "html"
  },

  // Keep JSON validation for real JSON files elsewhere
"json.validate.enable": true,
"cSpell.words": [
  "budparr",
  "CCMS",
  "docmaps",
  "esbenp",
  "goldmark",
  "jsonify",
  "leftnav",
  "tamasfe"
]
}
